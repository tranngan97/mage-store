<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="widget" translate="label" sortOrder="200">
            <label>Mage Widget</label>
        </tab>
        <section id="general" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Setting</label>
            <tab>widget</tab>
            <resource>MageStore_StoreWidget::config</resource>
            <group id="weather_api" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Weather Widget</label>
                <field id="url" translate="label comment" type="text" sortOrder="10" showInDefault="1" canRestore="1">
                    <label>API Endpoint</label>
                </field>
                <field id="key" translate="label comment" type="text" sortOrder="20" showInDefault="1" canRestore="1">
                    <label>API Key</label>
                </field>
            </group>
            <group id="currency" translate="label" type="text" sortOrder="350" showInDefault="1" showInWebsite="1">
                <label>Currency Widget</label>
                <field id="link" translate="label" type="text" sortOrder="40" showInDefault="1" canRestore="1">
                    <label>Currency Source File</label>
                </field>
            </group>
            <group id="news" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Business News Widget</label>
                <field id="link" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>News Source File</label>
                </field>
            </group>
        </section>
    </system>
</config>
